{
  "_id": "view-about",
  "_type": "view",
  "class": "acp-page",
  "_children": [
    {
      "_type": "label",
      "class": "acp-title",
      "_text": "About"
    },
    {
      "_type": "label",
      "class": "acp-info-line",
      "_data_source": "acp.ui.about.agent_version_text",
      "_on_data": {
        "_op": "set-text-from-data"
      }
    },
    {
      "_type": "label",
      "class": "acp-info-line",
      "_data_source": "acp.ui.about.xpell_version_text",
      "_on_data": {
        "_op": "set-text-from-data"
      }
    },
    {
      "_type": "label",
      "class": "acp-info-line",
      "_data_source": "acp.ui.about.connection_text",
      "_on_data": {
        "_op": "set-text-from-data"
      }
    },
    {
      "_type": "label",
      "class": "acp-info-line",
      "_data_source": "acp.ui.about.server_url_text",
      "_on_data": {
        "_op": "set-text-from-data"
      }
    },
    {
      "_type": "button",
      "_id": "about-refresh-btn",
      "class": "acp-secondary-btn",
      "_text": "Refresh",
      "_on_click": {
        "_op": "acp-ui-action",
        "_params": {
          "_action": "refresh_about"
        }
      }
    }
  ]
}
